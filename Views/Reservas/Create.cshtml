@model ProySalonDeEventos.Models.Reserva

@{
    ViewData["Title"] = "Reserva";
}

<h1>¡Realizá tu reserva!
</h1>
<h4>una vez que envies la reserva, chequea de recibir un mail con la confimacion.</h4>
<h4>Ingresa las datos a continuación</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="cantInvitados" class="control-label"></label>
                <input asp-for="cantInvitados" class="form-control" />
                <span asp-validation-for="cantInvitados" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fecha" class="control-label"></label>
                <input asp-for="fecha" class="form-control" />
                <span asp-validation-for="fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentIdEvento" class="control-label"></label>
                <select asp-for="CurrentIdEvento" class ="form-control" asp-items="ViewBag.CurrentIdEvento"></select>
            </div>
            <div class="form-group">
                <label asp-for="CurrentIdCliente" class="control-label"></label>
                <select asp-for="CurrentIdCliente" class ="form-control" asp-items="ViewBag.CurrentIdCliente"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Enviar Reserva" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
