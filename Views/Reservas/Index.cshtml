@model IEnumerable<ProySalonDeEventos.Models.Reserva>

@{
    ViewData["Title"] = "Reservas";
}

<h1>Reservas</h1>
<hr>
<br>
<p>
    <a asp-action="Create">Crear Reserva</a>
</p>
<br>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.cantInvitados)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Evento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cantInvitados)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Evento.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.nombre)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdReserva">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.IdReserva">Detalle</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdReserva">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
